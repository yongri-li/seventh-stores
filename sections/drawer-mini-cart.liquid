{% render 'drawer-mini-cart',
  show_section: section.settings.show_section,
  the_collection: section.settings.the_collection
%}

{% schema %}
{
  "name": {
    "en": "Mini Cart"
  },
  "settings": [
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fffaf4"
    },
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Mini Cart Upsells?",
      "default": true
    },
    {
      "type": "collection",
      "id": "the_collection",
      "label": "Collection",
      "info": "Tip - Create a new collection referring all products and sort by Best Selling."
    },
    {
      "type": "checkbox",
      "id": "show_countdown",
      "label": "Show Countdown on Mini Cart?",
      "default": true
    },
    {
      "type": "text",
      "id": "countdown_limit",
      "label": "Countdown Limit",
      "default": "50.00",
      "info": "Must be a number without the currency. For example, for Â£50.00, enter 50.00."
    },
    {
      "type": "text",
      "id": "countdown_copy",
      "label": "Countdown copy",
      "default": "You are [[ money ]] away from free shipping.",
      "info": "Enter the text you want to appear when counting down. Use \"[[ money ]]\" as a placeholder for the currency to appear in the content. "
    },
    {
      "type": "text",
      "id": "countdown_success",
      "label": "Countdown success message",
      "info": "What text should appear once the customer's cart value has exceeded or equalled the limit?"
    }
  ]
}
{% endschema %}
