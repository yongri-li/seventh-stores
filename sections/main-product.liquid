    {% endif %}
    "brand": {
      "@type": "Thing",
      "name": "{{ product.vendor | escape }}"
    },
    "description": "{{ product.description | strip_html | escape }}",
    "image": [{% for image in product.images %}

     {% if forloop.last == true %}
        "{{ image.src }}"
      {% else %}
