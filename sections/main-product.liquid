{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign size_guide = product.metafields.descriptors.size_guide
  assign current_selling_plan_allocation = product.selected_selling_plan_allocation
  if current_selling_plan_allocation == null and current_variant.selling_plan_allocations.size > 0
    assign current_selling_plan_allocation = current_variant.selling_plan_allocations | first
  endif
  assign offer = current_selling_plan_allocation | default: current_variant
-%}

{%- style -%}
  :root{
    --product-input-border-color: {{ section.settings.input_border_color }};
  }

  .main-product-image-gallery img {
    grid-column: span 2;
  }

  #shopify-section-{{ section.id }} [data-sticky-column]{
    top: var(--header-height);
    background-color: {{ section.settings.content_bg }};
  }

  @media only screen and (min-width: 1024px){
    #shopify-section-{{ section.id }} [data-sticky-column]{
      max-height: calc(100vh - var(--header-height));
      height: 100vh;
      overflow: auto;
    }
  }

  product-form input,
  product-form select,
  product-form .select,
  product-form textarea,
  product-form .quantity,
  .product-single .accordion{
    border-color: var(--product-input-border-color);
  }
{%- endstyle -%}

<link rel="stylesheet" href="{{ 'vendor-photoswipe.css' | asset_url }}" media="print" onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'vendor-photoswipe-default-skin.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>
<noscript>{{ 'vendor-photoswipe.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'vendor-photoswipe-default-skin.css' | asset_url | stylesheet_tag }}</noscript>

<div
  data-section-id="{{ section.id }}"
  data-section-type="product"
  data-enable-history-state="true"
  itemscope
  itemtype="http://schema.org/Product"
>
  <div class="[ {% if section.settings.contain %}container{% endif %} mx-auto ] product-single">
    {%- assign current_variant = product.selected_or_first_available_variant -%}
    {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
    <div data-product-single-main class="[ lg:grid lg:grid-cols-12 ]">
      <div class="[ md:col-span-6 lg:col-span-7 ]">
        {%- if section.settings.use_image_gallery -%}
          {% style %}
            .dot.active {
              background-color: #000;
            }
          {% endstyle %}
          <slider-component class="slider-mobile-gutter relative">
            <ul class="flex flex-nowrap snap-x snap-mandatory scroll-smooth w-full overflow-x-auto">
              {%- for image in product.images -%}
                <li class="flex-shrink-0 snap-start w-full">
                  <img
                    loading="lazy"
                    width="{{ image.width }}"
                    height="{{ image.height }}"
                    class="cursor-zoom-in w-full h-auto"
                    data-variant-image="{{ image | image_url: width: 100, height: 100 | replace: '_small', '' }}"
                    src="{{ image | image_url: width: 640 }}"
                    srcset="
                      {{ image | image_url: width: 1280 }} 1280w,
                      {{ image | image_url: width: 1024 }} 1024w,
                      {{ image | image_url: width: 960 }} 960w,
                      {{ image | image_url: width: 720 }} 720w,
                      {{ image | image_url: width: 640 }} 640w,
                      {{ image | image_url: width: 480 }} 480w
                    "
                    data-gallery-image
                    alt="{{ image.alt | escape }}"
                  >
                </li>
              {%- endfor -%}
            </ul>
            {%- comment -%}
              <div class="slider-buttons no-js-hidden flex items-center">
                <button type="button" class="slider-button slider-button--prev p-2" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-chevron-left' with height: 20, width: 20 %}</button>
                <div class="slider-counter caption">
                  <span class="slider-counter--current">1</span>
                  <span aria-hidden="true"> / </span>
                  <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
                  <span class="slider-counter--total">{{ products_to_display }}</span>
                </div>
                <button type="button" class="slider-button slider-button--next p-2" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-chevron-right' with height: 20, width: 20 %}</button>
              </div>
            {%- endcomment -%}
            <div class="dots flex justify-center absolute bottom-2 left-0 right-0">
              {%- for image in product.images -%}
                <div
                  class="dot {% if forloop.first %}active{% endif %} h-2 w-2 border-2 border-black border-solid m-2"
                ></div>
              {%- endfor -%}
            </div>
          </slider-component>
        {%- else -%}
          {%- if product.images.size > 1 -%}
            <div class="px-6 lg:px-20">
              <div
                data-product-gallery="{{ section.id }}-{{ product.id }}"
                class="flex flex-row flex-nowrap overflow-x-auto w-full lg:ml-0 lg:w-auto lg:grid lg:grid-cols-2 lg:gap-4 snap-x snap-mandatory scroll-smooth lg:snap-none [ main-product-image-gallery ]"
              >
                {%- for media in product.media -%}
                  {%- if media.media_type == 'image' -%}
                    {%- assign image = media.image -%}
                    <img
                      loading="lazy"
                      width="{{ image.width }}"
                      height="{{ image.height }}"
                      src="{{ image | image_url: width: 640 }}"
                      srcset="{{ image | image_url: width: 1920 }} 2x, {{ image | image_url: width: 960 }} 960w"
                      class="cursor-zoom-in w-full h-auto flex-shrink-0 snap-start lg:col-span-2"
                      data-variant-image="{{ image | image_url: width: 100, height: 100 | replace: '_small', '' }}"
                      data-gallery-image
                      alt="{{ image.alt | escape }}"
                      data-media-id="{{ section.id }}-{{ image.id }}"
                    >
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          {%- else -%}
            {% if featured_image != blank %}
              <div class="d-block">
                <img
                  loading="lazy"
                  width="{{ featured_image.width }}"
                  height="{{ featured_image.height }}"
                  class="d-block w-full"
                  src="{{ featured_image | image_url: width: 640, height: 640 }}"
                  alt="{{ featured_image.alt | escape }}"
                  data-product-featured-image
                >
              </div>
            {% endif %}
          {%- endif -%}
        {%- endif -%}
      </div>

      <div
        data-sticky-column
        class="[ flex-shrink-0 px-4 py-6 lg:pt-10 lg:pl-10 lg:pr-5 lg:sticky lg:top-4 md:col-span-6 lg:col-span-5 lg:self-start ]"
      >
        <product-form data-section="{{ section.id }}" data-product-id="{{ section.id }}-{{ product.id }}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'estimated_shipping_date' -%}
                {% render 'estimated-shipping-date' %}
              {%- when 'product_title' -%}
                <h1 class="[ mt-3 lg:mt-0 text-sm leading-snug lg:text-lg ]">{{ product.title }}</h1>
              {%- when 'product_price' -%}
                <div id="productPrice{{ product.id }}" class="product-price">
                  <p class="heading mt-3" data-price-wrapper>
                    <span data-product-price class="text-sm"> {{ offer.price | money }}</span>
                    <span
                      {% unless offer.compare_at_price_max > offer.price %}
                        style="display: none;"
                      {% endunless %}
                      class="visually-hidden"
                      data-compare-text
                    >
                      {{- 'products.product.regular_price' | t -}}
                    </span>
                    <s class="[ text-xs text-red-600 ]" data-product-compare-price>
                      {% if offer.compare_at_price > offer.price %}
                        {{ offer.compare_at_price | money }}
                      {% endif %}
                    </s>
                  </p>
                </div>
              {%- when 'product_vendor' -%}
                {% if product.vendor != blank %}
                  <p class="text-xs mt-3">{{ product.vendor }}</p>
                {% endif %}
              {%- when 'stock_notice' -%}
                <div class="mt-3" data-product-stock-notice>
                  {%- if offer.inventory_quantity > 0 -%}
                    {%- if settings.low_stock_warning -%}
                      {%- assign threshold = settings.low_stock_threshold | plus: 0 -%}
                      {%- if offer.inventory_quantity <= threshold -%}
                        <p class="font-bold text-orange-500">
                          {{ 'products.product.low_in_stock' | t: amount: offer.inventory_quantity }}
                        </p>
                      {%- else -%}
                        <p class="font-bold text-green-500">{{ 'products.product.in_stock' | t }}</p>
                      {%- endif -%}
                    {%- else -%}
                      <p class="font-bold text-green-500">{{ 'products.product.in_stock' | t }}</p>
                    {%- endif -%}
                  {%- else -%}
                    {%- if offer.available -%}
                      <p class="font-bold text-green-500">{{ 'products.product.in_stock' | t }}</p>
                    {%- else -%}
                      <p class="font-bold text-red-500">{{ 'products.product.sold_out' | t }}</p>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              {%- when 'breadcrumbs' -%}
                <div class="mb-4">
                  {% render 'breadcrumb' %}
                </div>
              {%- when 'variant_selectors' -%}
                {%- if block.settings.logged_in_only -%}
                  {%- if customer -%}
                    {%- render 'main-product-variant-selectors', product: product -%}
                  {%- endif -%}
                {%- else -%}
                  {%- render 'main-product-variant-selectors', product: product -%}
                {%- endif -%}
              {%- when 'unisex_link' -%}
                <!-- Unisex Link -->
                {%- assign unisex_link = product.metafields.gender.variant.value -%}
                <!-- {{ product.metafields.gender.variant | json }} -->
                {%- unless unisex_link == blank -%}
                  {%- assign unisex_type = unisex_link.metafields.gender.type.value | first -%}
                  <div class="my-8">
                    <a class="p-2 border border-color text-xs" href="{{ unisex_link.url }}">
                      {{- 'products.product.gender.variant' | t: alternative: unisex_type -}}
                    </a>
                  </div>
                {%- endunless -%}
              {%- when 'product_description' -%}
                <div class="rte mt-3">{{ product.description }}</div>
              {%- when 'buy_now_buttons' -%}
                {%- if block.settings.logged_in_only -%}
                  {%- if customer -%}
                    <div class="max-w-md">
                      {%- render 'main-product-buy-buttons', product: product -%}
                    </div>
                  {%- endif -%}
                {%- else -%}
                  {%- render 'main-product-buy-buttons', product: product -%}
                {%- endif -%}
              {%- when 'collapsible_tab' -%}
                <details class="border-t border-b border-solid border-color group accordion accordion--product">
                  {%- unless block.settings.heading == blank -%}
                    <summary class="cursor-pointer py-3 flex">
                      <p class="heading leading-none">{{ block.settings.heading }}</p>
                      <div class="ml-auto">
                        <span class="group-open:hidden">{% render 'icon-plus', height: 11, width: 11 %}</span>
                        <span class="hidden group-open:block">{% render 'icon-minus', height: 11, width: 11 %}</span>
                      </div>
                    </summary>
                  {%- endunless -%}
                  <div class="{% unless block.settings.size_guide %}rte{% endunless %} pb-3">
                    {%- if block.settings.product_description -%}
                      {{ product.description }}
                    {%- endif -%}
                    {%- if block.settings.size_guide -%}
                      {% render 'product-size-guide' %}
                    {%- endif -%}
                    {%- unless block.settings.content == blank -%}
                      {{ block.settings.content | newline_to_br }}
                    {%- endunless -%}
                    {%- unless block.settings.page_content == blank -%}
                      {{ pages[block.settings.page_content].content }}
                    {%- endunless -%}
                  </div>
                </details>
              {%- when 'product_countdown' -%}
                {% render 'product-countdown' with block: block %}
              {%- when 'social_sharing' -%}
                {% render 'social-sharing',
                  share_title: product.title,
                  share_permalink: product.url,
                  share_image: product
                %}
              {%- when 'related_products' -%}
                {% render 'product-tagged-related-products' %}
              {%- when 'separator' -%}
                <hr class="mt-3">
              {%- when 'product_usp' -%}
                <div class="p-2 mt-3" style="background-color: {{ block.settings.background_color }};">
                  <div class="flex flex-row items-center align-center" style="color: {{ block.settings.font_color }};">
                    <div class="pr-2">
                      {{ block.settings.icon }}
                    </div>
                    <div class="pl-0">
                      {%- unless block.settings.heading == blank -%}
                        <p style="font-size: {{ block.settings.heading_size }}px;" class="heading mb-0 leading-relaxed">
                          {{ block.settings.heading }}
                        </p>
                      {%- endunless -%}
                      {%- unless block.settings.description == blank -%}
                        <p style="font-size: {{ block.settings.description_size }}px;" class=" mb-0 leading-relaxed">
                          {{ block.settings.description }}
                        </p>
                      {%- endunless -%}
                    </div>
                  </div>
                </div>
              {%- when 'styled_with' -%}
                <!-- Styled With -->
                {%- assign styled_with_products = product.metafields.cross_sell.styled_with.value -%}
                <div class="mb-4">
                  {%- unless styled_with_products == blank -%}
                    <h2 class="my-4 text-base">{{ 'products.product.styled_with' | t }}</h2>
                    <div class="overflow-hidden">
                      <div class="flex flex-row no-wrap w-full pb-4 overflow-x-scroll scroll-bar">
                        {%- for styled_product in styled_with_products -%}
                          <div class="w-1/2 flex-shrink-0 pr-4">
                            {% render 'product-grid-item', product: styled_product %}
                          </div>
                        {%- endfor -%}
                      </div>
                    </div>
                  {%- endunless -%}
                </div>
              {%- when 'product_reviews' -%}
                <div id="shopify-product-reviews" data-id="{{ product.id }}">{{ product.metafields.spr.reviews }}</div>
              {%- when 'data_related_products' -%}
                {% render 'product-data-recommended-products-mini',
                  section_id: section.id,
                  the_limit: block.settings.limit
                %}
              {%- when 'color_variants' -%}
                {%- if product.metafields.filters.colour or product.metafields.color.variants.value -%}
                  <div class="my-2 lg:my-4 flex lg:block items-center">
                    {%- if product.metafields.filters.colour -%}
                      <p class="product-single__color-swatch lg:pb-2">{{ product.metafields.filters.colour }}</p>
                    {%- endif -%}
                    {%- if product.metafields.color.variants.value -%}
                      <ul class="flex">
                        {%- unless product.metafields.color.swatch == blank -%}
                          <li class="px-1">
                            <span class="h-4 w-4 block border border-black p-px rounded-full m- ">
                              <span
                                class="h-3 w-3 block rounded-full"
                                style="background-color: {{ product.metafields.color.swatch }}"
                              ></span>
                            </span>
                          </li>
                        {%- endunless -%}
                        {%- for product in product.metafields.color.variants.value -%}
                          <li class="px-1">
                            <a class="block" href="{{ product.url }}">
                              <span class="h-4 w-4 block border border-black p-px rounded-full m- ">
                                <span
                                  class="h-3 w-3 block rounded-full"
                                  style="background-color: {{ product.metafields.color.swatch }}"
                                ></span>
                              </span>
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- when 'custom_text' -%}
                {%- if block.settings.logged_in_only -%}
                  {%- if customer != blank -%}
                    {%- if block.settings.custom_text != blank -%}
                      <div class="rte">
                        {{ block.settings.custom_text }}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                {%- elsif block.settings.logged_out_only -%}
                  {%- if customer == blank -%}
                    {%- if block.settings.custom_text != blank -%}
                      <div class="rte">
                        {{ block.settings.custom_text }}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                {%- else -%}
                  {%- if block.settings.custom_text != blank -%}
                    <div class="rte">
                      {{ block.settings.custom_text }}
                    </div>
                  {%- endif -%}
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </product-form>
      </div>
    </div>
  </div>
</div>

{%- unless size_guide == blank -%}
  <div
    x-cloak
    x-data="{ open: false }"
    :class="open ? 'block' : 'hidden'"
    x-on:size-guide-trigger.window="open = true"
    class="fixed z-10 inset-0 overflow-y-auto"
    aria-labelledby="modal-title"
    role="dialog"
    aria-modal="true"
  >
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div
        @keyup.window.escape="open = false"
        @click="open = false"
        x-transition
        class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        aria-hidden="true"
      ></div>
      <!-- This element is to trick the browser into centering the modal contents. -->
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
      <div
        x-transition
        class="inline-block align-bottom px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-sm sm:w-full sm:p-6"
      >
        <div>
          <div class="mt-3 text-center sm:mt-5">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              {{ 'products.product.size_guide' | t }}
            </h3>
            <div class="mt-2">
              {{ size_guide }}
            </div>
          </div>
        </div>
        <div class="mt-5 sm:mt-6">
          <button
            @click="open = false"
            type="button"
            class="btn secondary-button [ inline-flex justify-center w-full px-4 py-2 text-base sm:text-sm ]"
          >
            Okay, got it!
          </button>
        </div>
      </div>
    </div>
  </div>
{%- endunless -%}

