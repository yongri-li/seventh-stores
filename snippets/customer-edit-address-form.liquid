<div class="my-4">
    <h2 class="text-xl font-bold">{{ 'customer.addresses.edit_address' | t }}</h2>
</div>

{% form 'customer_address', address, class: 'w-full max-w-lg' %}
    <!-- personal -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressFirstNameNew_{{ form.id }}">
                {{ 'customer.addresses.first_name' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            type="text"
            name="address[first_name]"
            id="AddressFirstNameNew_{{ form.id }}"
            value="{{ form.first_name }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressLastNameNew_{{ form.id }}">
                {{ 'customer.addresses.last_name' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="text"
                name="address[last_name]"
                id="AddressLastNameNew_{{ form.id }}"
                value="{{ form.last_name }}"
                autocapitalize="words">
        </div>
    </div>
    <!-- company -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCompanyNew_{{ form.id }}">
                {{ 'customer.addresses.company' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="text"
                name="address[company]"
                id="AddressCompanyNew_{{ form.id }}"
                value="{{ form.company }}"
                autocapitalize="words">
            <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
        </div>
    </div>
    <!-- address -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressAddress1New_{{ form.id }}">
                {{ 'customer.addresses.address1' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            type="text"
            name="address[address1]"
            id="AddressAddress1New_{{ form.id }}"
            value="{{ form.address1 }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressAddress2New_{{ form.id }}">
                {{ 'customer.addresses.address2' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[address2]"
            id="AddressAddress2New_{{ form.id }}"
            value="{{ form.address2 }}"
            autocapitalize="words">
        </div>
    </div>
    <!-- country -->
    <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCityNew_{{ form.id }}">
                {{ 'customer.addresses.city' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[city]"
            id="AddressCityNew_{{ form.id }}"
            value="{{ form.city }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCountryNew_{{ form.id }}">
                {{ 'customer.addresses.country' | t }}
            </label>
            <div class="relative">
                <select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                name="address[country]"
                id="AddressCountryNew_{{ form.id }}"
                data-default="{{ form.country }}">
                {{ country_option_tags }}
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                </div>
            </div>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressZipNew_{{ form.id }}">
                {{ 'customer.addresses.zip' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[zip]"
            id="AddressZipNew_{{ form.id }}"
            value="{{ form.zip }}"
            autocapitalize="characters">
        </div>
    </div>
    <!-- phone -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressPhoneNew_{{ form.id }}">
                {{ 'customer.addresses.phone' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="tel"
                name="address[phone]"
                id="AddressPhoneNew_{{ form.id }}"
                value="{{ form.phone }}"
                pattern="[0-9\-]*">
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="address_default_address_{{ form.id }}">
            {{ 'customer.addresses.set_default' | t }}
            </label>
            {{ form.set_as_default_checkbox }}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <button class="[ w-full focus:outline-none font-bold py-2 px-4 ] btn tertiary-button" type="submit">{{ 'customer.addresses.update' | t }}</button>
        </div>
        <div class="w-full md:w-1/2 px-3">
            <button class="[ w-full focus:outline-none font-bold py-2 px-4 ] btn tertiary-button" type="button" @click="formEdit{{ index }} = false">{{ 'customer.addresses.cancel' | t }}</button>
        </div>
    </div>

    <div id="AddressProvinceContainerNew" style="display: none">
      <label for="AddressProvinceNew">
        {{ 'customer.addresses.province' | t }}
      </label>
      <select
        name="address[province]"
        id="AddressProvinceNew"
        data-default="{{ form.province }}">
      </select>
    </div>
{% endform %}