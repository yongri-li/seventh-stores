<div class="my-4">
    <h2 class="text-xl font-bold">{{ 'customer.addresses.add_new' | t }}</h2>
</div>

{% form 'customer_address', customer.new_address, class: 'w-full max-w-lg ajax-form' %}
    <!-- personal -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressFirstNameNew">
                {{ 'customer.addresses.first_name' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            type="text"
            name="address[first_name]"
            id="AddressFirstNameNew"
            value="{{ form.first_name }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressLastNameNew">
                {{ 'customer.addresses.last_name' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="text"
                name="address[last_name]"
                id="AddressLastNameNew"
                value="{{ form.last_name }}"
                autocapitalize="words">
        </div>
    </div>
    <!-- company -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCompanyNew">
                {{ 'customer.addresses.company' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="text"
                name="address[company]"
                id="AddressCompanyNew"
                value="{{ form.company }}"
                autocapitalize="words">
        </div>
    </div>
    <!-- address -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressAddress1New">
                {{ 'customer.addresses.address1' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            type="text"
            name="address[address1]"
            id="AddressAddress1New"
            value="{{ form.address1 }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressAddress2New">
                {{ 'customer.addresses.address2' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[address2]"
            id="AddressAddress2New"
            value="{{ form.address2 }}"
            autocapitalize="words">
        </div>
    </div>
    <!-- country -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCityNew">
                {{ 'customer.addresses.city' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[city]"
            id="AddressCityNew"
            value="{{ form.city }}"
            autocapitalize="words">
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressCountryNew">
                {{ 'customer.addresses.country' | t }}
            </label>
            <div class="relative">
                <select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                name="address[country]"
                id="AddressCountryNew"
                data-default="{{ form.country }}">
                {{ country_option_tags }}
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                </div>
            </div>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressZipNew">
                {{ 'customer.addresses.zip' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            type="text"
            name="address[zip]"
            id="AddressZipNew"
            value="{{ form.zip }}"
            autocapitalize="characters">
        </div>
    </div>

    <!-- phone -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="AddressPhoneNew">
                {{ 'customer.addresses.phone' | t }}
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                type="tel"
                name="address[phone]"
                id="AddressPhoneNew"
                value="{{ form.phone }}"
                pattern="[0-9\-]*">
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="address_default_address_new">
            {{ 'customer.addresses.set_default' | t }}
            </label>
            {{ form.set_as_default_checkbox }}
        </div>
    </div>

    {%- if form.errors != blank -%}
    <div class="[ w-full mb-6 bg-red-100 border-t-4 border-red-500 rounded-b text-red-900 px-3 py-3 shadow-md ]" role="alert">
        <div class="flex items-center">
        <div class="py-1">
            <svg class="fill-current h-6 w-6 text-red-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg>
        </div>
        <p>{{ form.errors | default_errors }}</p>
        </div>
    </div>
    {%- endif -%}

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <button class="[ w-full focus:outline-none font-bold py-2 px-4 ] btn tertiary-button" type="submit">{{ 'customer.addresses.add' | t }}</button>
        </div>
        <div @click="newModalOpen = false" class="w-full md:w-1/2 px-3">
            <button class="[ w-full focus:outline-none font-bold py-2 px-4 ] btn tertiary-button address-new-toggle" type="button">{{ 'customer.addresses.cancel' | t }}</button>
        </div>
    </div>

    <div id="AddressProvinceContainerNew" style="display: none">
      <label for="AddressProvinceNew">
        {{ 'customer.addresses.province' | t }}
      </label>
      <select
        name="address[province]"
        id="AddressProvinceNew"
        data-default="{{ form.province }}">
      </select>
    </div>

    <script>
        function addNewHelper(){
            return{
                {%- if form.errors != blank -%}
                newModalOpen : true
                {%- else -%}
                newModalOpen : false
                {%- endif -%}
            }
        }
    </script>
{% endform %}