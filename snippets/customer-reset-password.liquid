{% form 'reset_customer_password' %}
  {%- if form.errors != blank -%}
    <div
      class="[ w-full mb-5 bg-red-100 border-t-4 border-red-500 rounded-b text-red-900 px-4 py-3 shadow-md ]"
      role="alert"
    >
      <div class="flex items-center">
        <div class="py-1">
          <svg class="fill-current h-6 w-6 text-red-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/>
          </svg>
        </div>
        <p>{{ form.errors | default_errors }}</p>
      </div>
    </div>
  {%- endif -%}
  <div class="rounded-md shadow-sm">
    <div class="mb-6">
      <input
        id="ResetPassword"
        class="appearance-none bg-transparent rounded-none relative block w-full py-1 leading-tight border-b border-color focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 text-sm {% if form.errors contains 'password' %}input-error{% endif %}"
        placeholder="{{ 'customer.reset_password.password' | t }}"
        aria-label="Email address"
        name="customer[password]"
        type="password"
        required
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off"
        autofocus
      >
    </div>
    <div class="">
      <input
        id="PasswordConfirmation"
        class="appearance-none bg-transparent rounded-none relative block w-full py-1 leading-tight border-b border-color focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 text-sm {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
        aria-label="Password"
        name="customer[password_confirmation]"
        type="password"
        required
        placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
      >
    </div>
  </div>

  <div class="mt-6">
    <button
      type="submit"
      class="[ group relative w-full focus:shadow-outline focus:outline-none py-3 text-left leading-tight ]"
    >
      <span class="inline-block align-middle pr-3">
        {%- render 'icon-arrow-right' -%}
      </span>
      <span class="align-middle">
        {{ 'customer.reset_password.submit' | t }}
      </span>
    </button>
  </div>
{% endform %}
