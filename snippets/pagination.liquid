<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white py-3 flex items-center justify-between">
    <div class="flex-1 flex justify-between sm:hidden">
      {%- if paginate.previous -%}
      <a href="{{ paginate.previous.url }}" class="relative inline-flex items-center px-4 py-2 border border-solid border-color text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
        {{ 'pagination.previous' | t }}
      </a>
      {%- endif -%}
      {%- if paginate.next -%}
      <a href="{{ paginate.next.url }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-solid border-color text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
        {{ 'pagination.next' | t }}
      </a>
      {%- endif -%}
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
      <div class="mx-auto">
        <p class="text-sm text-gray-700">
          Showing page
          <span class="font-medium">{{ paginate.current_page }}</span>
          of
          <span class="font-medium">{{ paginate.pages }}</span>
        </p>
      </div>
      <div>
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          {%- if paginate.previous -%}
          <a href="{{ paginate.previous.url }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <span class="sr-only">{{ 'pagination.previous' | t }}</span>
            <!-- Heroicon name: solid/chevron-left -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
          {%- endif -%}

          {%- for part in paginate.parts -%}
            {%- if part.is_link -%}
            <!-- Current: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600", Default: "" -->
              <a href="{{ part.url }}" aria-current="page" class="z-10 relative hover:bg-gray-50 inline-flex items-center px-4 py-2 border border-color text-sm font-medium">{{ part.title }}</a>
            {%- else -%}
              <p class="z-10 bg-gray-50 text-gray-500 relative inline-flex items-center px-4 py-2 border border-color text-sm font-medium">{{ part.title }}</p>
            {%- endif -%}
          {%- endfor -%}

          {%- if paginate.next -%}
          <a href="{{ paginate.next.url }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <span class="sr-only">{{ 'pagination.next' | t }}</span>
            <!-- Heroicon name: solid/chevron-right -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
          {%- endif -%}
        </nav>
      </div>
    </div>
  </div>
</div>