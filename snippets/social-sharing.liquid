<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing flex justify-center space-x-4">

  {% if settings.share_facebook %}
    <a class="h-6 w-6 inline-flex" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% render 'icon-facebook' %}
      <span class="sr-only" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="sr-only">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="h-6 w-6 inline-flex" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% render 'icon-twitter' %}
      <span class="sr-only" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="sr-only">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="h-6 w-6 inline-flex" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}">
      {% render 'icon-pinterest' %}
      <span class="sr-only">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="sr-only">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

</div>
