<section class="cls-fix">
  <div class="[ flex items-center justify-center py-20 md:py-40 px-4 sm:px-6 lg:px-8 ]">
    <div class="max-w-md w-full">
      <!-- password reset success -->
      <div
        class="[ bg-teal-100 border-teal-500 text-teal-900 px-4 py-3 ] form-success hidden"
        role="alert"
        id="ResetSuccess"
      >
        <div class="flex">
          <div class="py-1">
            <svg class="fill-current h-4 w-4 text-teal-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/>
            </svg>
          </div>
          <div>
            <p class="[ font-bold hover:underline ]">{{ 'customer.recover_password.success' | t }}</p>
            <p class="[ text-sm ]">{{ 'customer.recover_password.success' | t }}</p>
          </div>
        </div>
      </div>
      <div>
        <h1 class="mt-6 mb-6 text-base">
          {{ 'customer.reset_password.title' | t }}
        </h1>
      </div>
      {%- render 'customer-reset-password' -%}
    </div>
  </div>

  {% if shop.checkout.guest_login %}
    <h2>{{ 'customer.login.guest_title' | t }}</h2>

    {% form 'guest_login' %}
      <input type="submit" class="btn" value="{{ 'customer.login.guest_continue' | t }}">
    {% endform %}
  {% endif %}
</section>
